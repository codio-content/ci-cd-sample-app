{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "airbnb",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "semi":  ["error", "never"],
    "comma-dangle": ["off"],
    "operator-linebreak": ["off"],
    "import/no-extraneous-dependencies": ["error",  {"devDependencies": true}],
    "max-len": ["error", { "code": 120 }]
  }
}
